<% if (success && success.length) { %>
  <% success.forEach(message => { %>
    <div class="alert alert-success alert-dismissible fade show col-6 offset-3 mt-3 text-center" role="alert">
      <%= message %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% }) %>
<% } %>


<% if (error && error.length) { %>
  <% error.forEach(message => { %>
    <div class="alert alert-danger alert-dismissible fade show col-6 offset-3 mt-3 text-center" role="alert">
      <%= message %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% }) %>
<% } %>


