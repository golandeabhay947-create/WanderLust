
<style>

 /* search */

  .navbar form {
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .search-input {
    border-radius: 30px;
    padding: 0.6rem 1.5rem;
    border: 1px solid #ddd;
    transition: all 0.3s ease;
    min-width: 250px;
  }

  .search-input:focus {
    outline: none;
    border-color: #fe424d;
    box-shadow: 0 0 0 0.15rem rgba(254, 66, 77, 0.25);
  }

  .search-btn {
    background-color: #fe424d;
    color: white;
    border-radius: 30px;
    padding: 0.6rem 1.2rem;
    border: none;
    display: flex;
    align-items: center;
    gap: 6px;
    font-weight: 500;
    transition: all 0.3s ease;
  }

  .search-btn:hover {
    background-color: #e63946;
    transform: scale(1.03);
  }

  .search-btn i {
    font-size: 0.9rem;
  }

  @media (max-width: 768px) {
    .search-input {
      min-width: 150px;
    }

    .search-btn span {
      display: none; 
    }
  }

/* share your place */

.share-place {
   border: 1.5px solid #ddd;
    border-radius: 25px;
    padding: 0.4rem 1rem;
    margin-left: 0.6rem;
    display: inline-flex;
    align-items: center;
    gap: 6px;
    font-weight: 500;
    color: #320d97 !important;
    transition: all 0.3s ease;
  }

  .share-place:hover {
    background-color: #f8f9fa;
    border-color: #fe424d;
    color: #fe424d !important;
  }

  .share-place i {
    font-size: 0.9rem;
  }

/* sign up , log in , log out */

.user {
    border: 1.5px solid #ddd;
    border-radius: 25px;
    padding: 0.4rem 1rem;
    margin-left: 0.6rem;
    display: inline-flex;
    align-items: center;
    gap: 6px;
    font-weight: 500;
    color: #333 !important;
    transition: all 0.3s ease;
  }

  .user i {
    font-size: 0.9rem;
  }

  .user:hover {
    background-color: #f8f9fa;
    border-color: #fe424d;
    color: #fe424d !important;
  }
  

</style>


<nav class="navbar navbar-expand-lg bg-body-light border-bottom sticky-top">
  <div class="container-fluid">
    <a class="navbar-brand" href="/listings"><i class="fa-solid fa-compass"></i></a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <!-- Left side -->
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <a class="nav-link user" href="/listings">
            <i class="bi bi-map"></i> <b>Explore</b>
          </a>
        </li>
      </ul>

      <!-- Center: Search -->
      <form class="d-flex mx-lg-2 mb-2 mb-lg-0" action="/listings" method="GET">
        <input class="form-control me-2 search-input" type="search" name="q"
          placeholder="Search by title, location or price" value="<%= typeof q !== 'undefined' ? q : '' %>">
        <button class="btn search-btn" type="submit">
          <i class="fa-solid fa-magnifying-glass"></i> Search
        </button>
      </form>

      <!-- Right side: Share + User -->
      <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <a class="nav-link share-place" href="/listings/new">
            <i class="fa-solid fa-plus"></i> Share Your Place
          </a>
        </li>

        <% if (!currUser) { %>
          <li class="nav-item">
            <a class="nav-link user" href="/signup">
              <i class="fa-regular fa-user"></i> Sign Up
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link user" href="/login">
              <i class="fa-solid fa-arrow-right-to-bracket"></i> Log In
            </a>
          </li>
        <% } %>

       <% if (currUser) { %>

<!-- Favourites -->
<li class="nav-item">
    <a class="nav-link user" href="/listings/favourites">
        <i class="fa-solid fa-heart text-danger"></i> My Favourites
    </a>
</li>

<!-- Logout -->
<li class="nav-item">
    <a class="nav-link user" href="/logout">
        <i class="fa-solid fa-up-right-from-square"></i> Log Out
    </a>
</li>



<% } %>
      </ul>
    </div>
  </div>
</nav>
