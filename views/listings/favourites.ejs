<% layout("/layouts/boilerplate.ejs") %>


<% if(allListing.length === 0) { %>
<div class="row mt-5 text-center">
  <div class="col-8 offset-2 p-5 shadow rounded">

    <!-- Heading -->
    <h2 class="mb-4">You have no favourite places yet!</h2>

    <!-- Optional description -->
    <p class="mb-4">Start exploring amazing places and add them to your favourites ❤️</p>

    <!-- Explore button -->
    <a href="/listings" class="btn btn-danger btn-lg">
      Explore Now
    </a>
  </div>
</div><% } else { %>

  <h2 class="mt-3">My Favourite Places ❤️</h2>

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">

  <% for(listing of allListing){ %>

    <a href="/listings/<%=listing._id%>" class="listing-link">
      <div class="card col">

        <img src="<%= listing.image.url %>" 
             class="card-img-top" 
             alt="listing_image"
             style="height: 20rem; object-fit: cover;">

        <div class="card-img-overlay"></div>

        <div class="card-body">
          <p class="card-text">
            <b><%= listing.title %></b> 
            <br>
            &#8377;<%= listing.price.toLocaleString("en-IN") %> / night
            <i class="tax-info">&nbsp;&nbsp;+18% GST</i>
          </p>
        </div>

      </div>
    </a>

  <% } %>

</div>

<% } %>