<% layout("/layouts/boilerplate.ejs") %>


 <div class="row mt-3">
    <div class="col-8 offset-2 mb-2">
 <h3><b><%=listing.title%></b></h3>
 <hr>
       <i><b>Owner :</b> <%= listing.owner.username %></i>
</div>
<div class="card col-6 offset-2">
  <img src="<%= listing.image.url %>" class="card-img-top show-image" alt="listing-image">

  <div class="card-body">
    <p class="card-text">
      <b>Description :</b> <%= listing.description %> <br>
      <b>Price :</b> &#8377;<%= listing.price.toLocaleString("en-IN") %> / night <br>
      <b>Location :</b> <%= listing.location %> <br>
      <b>Country :</b> <%= listing.country %> <br>
    </p>
  </div>
</div>


<% if(currUser && currUser._id.equals(listing.owner._id)) { %>
   <div class="d-flex gap-3 offset-2">
            <a href="/listings/<%=listing._id%>/edit" class="btn btn-dark edit-btn">Edit Listing</a>

<form method="POST" action="/listings/<%= listing._id %>?_method=DELETE" class="d-inline delete-form">
    <button class="btn btn-danger">Delete</button>
</form>


        </div>

        <% } %>

        <div class="col-8 offset-2 mb-4">
  <br>
  <% if(currUser) { %>
  <h4 class="mb-3">Rate This Amazing Place</h4>

  <form action="/listings/<%= listing._id %>/reviews" method="POST"  novalidate class="needs-validation border p-3 rounded shadow-sm"> 

  <div class="mb-1">
      <label for="rating" class="form-label">
    <fieldset class="starability-slot">
  <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
  <input type="radio" id="first-rate1" name="review[rating]" value="1" />
  <label for="first-rate1" title="Terrible">1 star</label>
  <input type="radio" id="first-rate2" name="review[rating]" value="2" />
  <label for="first-rate2" title="Not good">2 stars</label>
  <input type="radio" id="first-rate3" name="review[rating]" value="3" />
  <label for="first-rate3" title="Average">3 stars</label>
  <input type="radio" id="first-rate4" name="review[rating]" value="4" />
  <label for="first-rate4" title="Very good">4 stars</label>
  <input type="radio" id="first-rate5" name="review[rating]" value="5" />
  <label for="first-rate5" title="Amazing">5 stars</label>
</fieldset>

  </div>

    <!-- Comment -->
    <div class="mb-3">
      <label for="comment" class="form-label"><b>Share Your Experience</b></label>
      <textarea 
        name="review[comment]" 
        id="comment" 
        rows="4" 
        class="form-control"
        placeholder="Share your experience..."
        required
      ></textarea>
      <div class="valid-feedback">Thank You For Feedback !</div>
      <div class="invalid-feedback">Please give atleast small Feedback</div>
    </div>

    <!-- Submit Button -->
    <button class="btn btn-outline-dark">Submit Review</button>
  </form>

  <% } %>

<!--   All givenreview  -->
<hr>
<% if(listing.reviews.length > 0) { %>
<div class="row">
  <h4>All Reviews</h4>
  <% for (let review of listing.reviews) { %>
    <% if (!review) continue; %>

    <div class="col-md-6 mb-4">
      <div class="card shadow-sm h-100">
        <div class="card-body d-flex flex-column">

          <!-- Author -->
          <h6 class="text-muted mb-2">
            <i class="bi bi-person-circle me-1"></i>
            <%= review.author.username %>
          </h6>

          <!-- Star Rating -->
          <div class="text-warning mb-2">
            <% for (let i = 1; i <= 5; i++) { %>
              <i class="bi <%= i <= review.rating ? 'bi-star-fill' : 'bi-star' %>"></i>
            <% } %>
          </div>

          <!-- Review Comment -->
          <p class="card-text text-muted mb-3">
            <%= review.comment %>
          </p>

          <!-- Delete Button -->
          <div class="mt-auto text-end">
            <% if (currUser && review.author && review.author._id.equals(currUser._id)) { %>
<form
  action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
  method="POST"
  class="d-inline delete-form"
>
                <button class="btn btn-sm btn-outline-danger">
                  <i class="bi bi-trash"></i> Delete
                </button>
              </form>
            <% } %>
          </div>

        </div>
      </div>
    </div>

  <% } %>
</div>
<hr>
  <% } %>

</div>



 </div>

