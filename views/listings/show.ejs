<% layout("/layouts/boilerplate.ejs") %>

<style>
.show-image {
  height: 22rem;
  object-fit: cover;
}

.fav-btn {
  border: none;
  background: none;
  font-size: 1.7rem;
  cursor: pointer;
  transition: all 0.2s ease;
}

.fav-btn:hover {
  transform: scale(1.2);
}

.fav-active {
  color: red;
}
</style>

<div class="row mt-3">

  <!-- Title + Favourite -->
  <div class="col-8 offset-2 mb-2 d-flex justify-content-between align-items-center">
    
    <h3 class="mb-0">
      <b><%= listing.title %></b>
    </h3>

    <% if(currUser){ %>
    <form action="/listings/<%= listing._id %>/favourite" method="POST">
      <button type="submit" class="fav-btn">

        <% if(currUser.favourites && 
              currUser.favourites.some(fav => fav.equals(listing._id))) { %>
          
          <i class="bi bi-heart-fill fav-active"></i>

        <% } else { %>
          
          <i class="bi bi-heart"></i>

        <% } %>

      </button>
    </form>
    <% } %>

  </div>

  <div class="col-8 offset-2">
    <hr>
    <i><b>Owner :</b> <%= listing.owner.username %></i>
  </div>

  <!-- Listing Card -->
  <div class="card col-6 offset-2 mt-3">
    <img src="<%= listing.image.url %>" 
         class="card-img-top show-image" 
         alt="listing-image">

    <div class="card-body">
      <p class="card-text">
        <b>Description :</b> <%= listing.description %> <br>
        <b>Price :</b> ₹<%= listing.price.toLocaleString("en-IN") %> / night <br>
        <b>Location :</b> <%= listing.location %> <br>
        <b>Country :</b> <%= listing.country %> <br>
      </p>
    </div>
  </div>

  <!-- Edit/Delete -->
  <% if(currUser && currUser._id.equals(listing.owner._id)) { %>
    <div class="d-flex gap-3 offset-2 mt-3">
      <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark">
         Edit Listing
      </a>

      <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
        <button class="btn btn-danger">Delete</button>
      </form>
    </div>
  <% } %>

  <!-- Reviews Section -->
  <div class="col-8 offset-2 mt-5">

    <% if(currUser) { %>
      <h4 class="mb-3">Rate This Amazing Place</h4>

      <form action="/listings/<%= listing._id %>/reviews" 
            method="POST"
            class="border p-3 rounded shadow-sm">

        <!-- ⭐ Star Rating -->
        <div class="mb-3">
          <fieldset class="starability-slot">

            <input type="radio" id="rate1" name="review[rating]" value="1" />
            <label for="rate1" title="Terrible">1 star</label>

            <input type="radio" id="rate2" name="review[rating]" value="2" />
            <label for="rate2" title="Not good">2 stars</label>

            <input type="radio" id="rate3" name="review[rating]" value="3" />
            <label for="rate3" title="Average">3 stars</label>

            <input type="radio" id="rate4" name="review[rating]" value="4" />
            <label for="rate4" title="Very good">4 stars</label>

            <input type="radio" id="rate5" name="review[rating]" value="5" checked />
            <label for="rate5" title="Amazing">5 stars</label>

          </fieldset>
        </div>

        <!-- Comment -->
        <div class="mb-3">
          <label class="form-label"><b>Share Your Experience</b></label>
          <textarea name="review[comment]" 
                    rows="4" 
                    class="form-control"
                    required></textarea>
        </div>

        <button class="btn btn-outline-dark">
          Submit Review
        </button>
      </form>
    <% } %>

    <hr>

    <% if(listing.reviews.length > 0) { %>
      <h4>All Reviews</h4>

      <div class="row">
        <% for(let review of listing.reviews) { %>
          <% if(!review) continue; %>

          <div class="col-md-6 mb-4">
            <div class="card shadow-sm h-100">
              <div class="card-body d-flex flex-column">

                <h6 class="text-muted mb-2">
                  <%= review.author.username %>
                </h6>

                <!-- ⭐ Display Rating -->
                <div class="text-warning mb-2">
                  <% for(let i=1; i<=5; i++) { %>
                    <i class="bi <%= i <= review.rating ? 'bi-star-fill' : 'bi-star' %>"></i>
                  <% } %>
                </div>

                <p class="text-muted mb-3">
                  <%= review.comment %>
                </p>

                <% if(currUser && review.author._id.equals(currUser._id)) { %>
                  <div class="mt-auto text-end">
                    <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
                          method="POST">
                      <button class="btn btn-sm btn-outline-danger">
                        Delete
                      </button>
                    </form>
                  </div>
                <% } %>

              </div>
            </div>
          </div>

        <% } %>
      </div>
    <% } %>

  </div>

</div>