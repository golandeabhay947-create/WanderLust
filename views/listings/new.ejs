<% layout("/layouts/boilerplate.ejs") %>

<div class="row mt-3">
<div class="col-8 offset-2">
    <h3>Create a New Listing ðŸ™‚</h3>

    <form action="/listings" method="POST" novalidate class="needs-validation" enctype="multipart/form-data">

        <div class="mb-3">
            <label for="title" class="form-label"><b>Title</b></label><br>
            <input type="text" id="title" name="listing[title]" placeholder="Listing title" class="form-control" required>
            <div class="valid-feedback">Title looks good</div>
            <div class="invalid-feedback">Please enter a title</div>
        </div>

        <div class="mb-3">
            <label for="description" class="form-label"><b>Description</b></label><br>
            <textarea id="description" name="listing[description]" rows="4" placeholder="Short description" class="form-control" required></textarea>
            <div class="invalid-feedback">Please enter a description</div>
        </div>


        <div class="mb-3">
            <label for="image" class="form-label"><b>Image URL</b></label><br>
            <input type="file" id="image" name="listing[image]"  class="form-control" required>
            
        </div>

         <div class="mb-3">
  <label for="category" class="form-label"><b>Category</b></label>
  <select name="listing[category]" class="form-select" required>
    <option value="">Select Category</option>
    <option value="Trending">Trending</option>
    <option value="Rooms">Rooms</option>
    <option value="Beach">Beach</option>
    <option value="Mountains">Mountains</option>
    <option value="Camping">Camping</option>
    <option value="City">City</option>
    <option value="Pool">Pool</option>
    <option value="Nature">Nature</option>
    <option value="Heritage">Heritage</option>
    <option value="Islands">Islands</option>
  </select>
</div>

        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="price" class="form-label"><b>Price</b> (per night)</label><br>
                <input  id="price" name="listing[price]" placeholder="â‚¹" class="form-control" required>
                <div class="invalid-feedback">Please enter a valid price</div>
            </div>

            <div class="mb-3 col-md-8">
                <label for="location" class="form-label"><b>Location</b></label><br>
                <input type="text" id="location" name="listing[location]" placeholder="City / Area" class="form-control" required>
                <div class="invalid-feedback">Please enter a location</div>
            </div>
        </div>

        <div class="mb-3">
            <label for="country" class="form-label"><b>Country</b></label><br>
            <input type="text" id="country" name="listing[country]" placeholder="Country" class="form-control" required>
            <div class="invalid-feedback">Please enter a country</div>
        </div>

       


        <button type="submit" class="btn btn-dark add-btn mt-3">Add Listing</button>

    </form>
</div>
</div>
